SECRET_KEY=your-secret-key-change-this-in-production-use-long-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration (PostgreSQL required)
DATABASE_URL=postgresql://portfolio_user:portfolio_pass@localhost:5432/portfolio

UPLOAD_PATH=./uploads
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost,http://localhost:80
API_HOST=0.0.0.0
API_PORT=8000

# Microsoft Entra ID Configuration (Optional - for SSO authentication)
# Get these from Azure Portal > App Registrations
ENTRA_CLIENT_ID=your-application-client-id
ENTRA_CLIENT_SECRET=your-client-secret
ENTRA_TENANT_ID=your-tenant-id
ENTRA_REDIRECT_URI=http://localhost/api/auth/entra/callback
ENTRA_SCOPES=User.Read,email,profile,openid

# Authentication Strategy
AUTH_ALLOW_TRADITIONAL=true   # Allow email/password login
AUTH_ALLOW_ENTRA=true         # Allow Entra ID login
AUTH_REQUIRE_ENTRA=false      # Force Entra ID authentication (disable traditional login)

# Plaid Configuration (Optional - for bank account integration)
PLAID_CLIENT_ID=your_client_id_here
PLAID_SECRET=your_secret_here
PLAID_ENVIRONMENT=sandbox  # Options: sandbox, development, production

# Monitoring Configuration (Grafana)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change_this_password_in_production
