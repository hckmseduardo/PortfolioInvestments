# PostgreSQL Configuration
POSTGRES_DB=portfolio
POSTGRES_USER=portfolio_user
POSTGRES_PASSWORD=portfolio_pass_change_in_production

# PgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=change_this_password

# Application Configuration
SECRET_KEY=your-secret-key-change-in-production
REDIS_URL=redis://redis:6379/0

# TwelveData API (Optional - for stock price data)
TWELVEDATA_API_KEY=

# Plaid Configuration (Optional - for bank account integration)
# Get these from https://dashboard.plaid.com/team/keys
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENVIRONMENT=sandbox  # Options: sandbox, development, production
